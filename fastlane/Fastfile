# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)
platform :ios do
  scheme = nil
  workspace = nil
  podspec = 'Uluru.podspec'
  bumpType = 'patch'
  gitTag = nil

  before_all do
    scheme = ENV['SCHEME']
    workspace = ENV['WORKSPACE']
    git_pull(only_tags: true)
    gitTag = next_git_tag(bumpType)
  end

  desc "Releases and publishes new version to github releases and podspec."
  desc "Before this step you should commit and push code"
  lane :do_release do
    prepare_build
    # tag release on git
    add_git_tag(tag: gitTag)
    push_git_tags
    # publish to github release and podspec
    upload_prebuilt_binary
    # We should update podspec with the git tag and push as seperate commit.
    # TODO: if we want to do in CI, then we should provide a push msg for it.
    #publish_podspec
  end

  desc "Release dry run, all steps expect uploading release."
  lane :release_dry_run do
    puts gitTag
    puts change_log_since_last_tag
    prepare_build
    lint_podspec
  end

  desc "Lint podspec"
  lane :lint_podspec do
    pod_lib_lint(podspec: podspec, verbose: false, allow_warnings: true)
  end

  desc "Prepares build"
  lane :prepare_build do 
    puts workspace
    puts scheme
    cocoapods
    scan(scheme: scheme, code_coverage: true, clean: true) 
    # provides test coverage report
    xcov(
     workspace: workspace,
     scheme: scheme
    )
    # This build necessarily dont have any significance.
    gym(clean: true, scheme: scheme, skip_package_ipa: true)
    # Prepare carthage build and archive.
    carthage(command: "build", no_skip_current: true)
    carthage(command: "archive", frameworks: "Uluru")
    carthage(command: "archive", frameworks: "HALUluru")
    # Publish to slack
    # TODO: Publish test coverage report
    # TODO: Publish release availablity or error message=
  end

  desc "Uploads prebuilt binary for carthage"
  private_lane :upload_prebuilt_binary do
    # We pick the version as the release version tag.
    github_release = set_github_release(
      is_prerelease: true,
      repository_name: ENV['GITHUB_RELEASE_REPO'],
      api_token: ENV['GITHUB_TOKEN'],
      name: "WIP Beta build",
      tag_name: gitTag,
      commitish: "beta",
      description: change_log_since_last_tag,
      upload_assets: ["Uluru.framework.zip", "HALUluru.framework.zip"]
    )
  end

  desc "Prepares and publishes podspec"
  desc "Uses git tag as the version number"
  lane :publish_podspec do
    # podspec version update is a seperate developer commit
    pod_push(path: podspec, repo: 'tab-podspec', allow_warnings: true)
  end

  def change_log_since_last_tag
    # http://git-scm.com/docs/pretty-formats
    # <short hash> <commit title>
    return changelog_from_git_commits(pretty: '%h %s')
  end

  desc "Provides next tag number by applying bump type of patch or minor or major"
  def next_git_tag(bump)
    # calculates the new version according to
    # the semantic version added
    type = bump
    old = last_git_tag
    puts old
    version = old

    old[0] = ''
    oldArr = old.split('.').map{|v| v.to_i}    

    if type == "patch"
        version = "#{oldArr[0]}.#{oldArr[1]}.#{oldArr[2] + 1}"
    elsif type == "minor"
        version = "#{oldArr[0]}.#{oldArr[1] + 1}.0"
    elsif type == "major"
        version = "#{oldArr[0] + 1}.0.0"
    end   

    puts version
    if version == old
        UI.user_error!("Wrong release type parameter. Enter: patch | minor | major")
    end
    return version
  end



end
